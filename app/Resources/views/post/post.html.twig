{% extends 'base.html.twig' %}
{% block title %}
    {{ post.title }}
{% endblock %}
{% block content %}
<div class="container">
    <div id="head-title">
        <h1>{{ post.title }}</h1>
        <div class="line"></div>
    </div>
        <div class="content">
            <div class="row">
                <div class="col-lg-9">
                    <div id="news">
                        <div class="annotation">
                            <footer>
                                <div class="float-sm-left ">
                                    {{ 'post.author'|trans({},'entity') }}: {{ post.author.username }} {{ 'post.category'|trans({},'entity') }}: {% if post.category is null %} {{ 'post.category_null'|trans({},'entity') }} {% else %}<a href="{{ path('blog_category', {'slug': post.category.slug}) }}">{{ post.category.name }}</a>{% endif %}
                                    {{ 'post.tags'|trans({},'entity') }}:
                                    {% for tag in post.tags %}
                                        <a href="{{ path('blog_tags', {'slug': tag.slug}) }}">{{ tag.name }}</a>
                                    {% endfor %}
                                </div>
                                <div class="float-sm-right">
                                    {{ post.publishedDate|date('Y.n.d, H:m') }}
                                </div>
                            </footer>
                        </div>
                        <div class="line">
                        </div>
                        <article>
                            {{ post.content }}
                        </article>
                        <hr>
                    </div>
                </div>
                <div class="col-lg-3">
                    {{ print_archive() }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
