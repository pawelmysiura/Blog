<ul class="navbar-nav">
    {% for name, route in mainMenu %}
        {% if app.request.get('_route') == route %}
            <li class="nav-item active">
        {% else %}
            <li class="nav-item">
        {% endif %}
        <a class="nav-link" href="{{ path(route) }}">{{ name }}</a>
        </li>
        {% endfor %}
</ul>